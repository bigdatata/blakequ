<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ScrollView android:layout_height="fill_parent"
		android:fillViewport="true" android:layout_width="fill_parent"
		android:layout_weight="1"  android:padding="5dp">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingTop="40dip"
		android:background="@drawable/register_background"
		android:paddingLeft="30dip">

		<TextView android:id="@+id/register_view_account"
			android:text="@string/account" android:layout_width="80dip"
			android:layout_height="30dip" android:layout_marginTop="140dp"
			android:textColor="@color/black" android:textSize="7pt"/>
		<EditText android:id="@id/register_edit_account"
		     android:background="@drawable/login_edittext"
			android:layout_width="180dip" android:layout_height="40dip"
			android:text="" android:layout_toRightOf="@id/register_view_account"
			android:layout_marginBottom="18dip"  android:hint="@string/register_input_email" 
			android:layout_marginTop="140dp"/>

		<TextView android:id="@+id/register_view_passwd"
			android:text="@string/password" android:layout_width="80dip"
			android:layout_marginTop="18dip" android:layout_height="30dip"
			android:layout_below="@id/register_view_account"
			android:textColor="@color/black" android:textSize="7pt"
			android:layout_marginBottom="18dip"  />
		<EditText android:id="@id/register_edit_passwd"
		     android:background="@drawable/login_edittext"
			android:layout_width="180dip" android:layout_height="40dip"
			android:password="true" android:layout_toRightOf="@id/register_view_passwd"
			android:layout_marginBottom="5dip" android:layout_alignTop="@id/register_view_passwd" 
			android:hint="@string/register_input_pwd"/>


		<TextView android:id="@+id/register_view_passwd_ensure"
			android:text="@string/login_pwd_reinput" android:layout_width="80dip"
			android:layout_height="30dip" android:layout_below="@id/register_view_passwd"
			android:textColor="@color/black" android:textSize="7pt"
			/>
		<EditText android:id="@id/register_edit_passwd_ensure"
		     android:background="@drawable/login_edittext"
			android:layout_width="180dip" android:layout_height="40dip"
			android:password="true" android:layout_toRightOf="@id/register_view_passwd_ensure"
			android:layout_alignTop="@id/register_view_passwd_ensure"
			 android:hint="@string/register_input_pwd_too"/>


		<Button android:id="@id/register_ok_button" android:text="@string/register"
			android:layout_marginTop="30dip" android:layout_width="80dip"
			 android:layout_height="wrap_content"
			android:layout_below="@id/register_view_passwd_ensure"
			android:background="@drawable/main_title_button"
			android:layout_alignLeft="@id/register_view_passwd_ensure"
			android:layout_marginLeft="40dp" android:textSize="7pt"  />
		<Button android:id="@id/register_cancle_button" android:text="@string/cancel"
			android:layout_alignTop="@id/register_ok_button"
			android:layout_width="80dip" 
			android:background="@drawable/main_title_button"
			android:layout_toRightOf="@id/register_ok_button"
			android:layout_height="wrap_content" 
			android:layout_below="@id/register_edit_passwd_ensure"
			android:layout_marginLeft="40dp" android:textSize="7pt" />
	</RelativeLayout>
	</ScrollView>
</LinearLayout>
