<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:gravity="center_vertical"
	android:background="@drawable/login_blue" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<com.layout.TransparentPanel android:id="@+id/popup_window"
		android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:gravity="left"
		android:padding="1px" android:background="#ffffff">
		<CheckBox android:id="@+id/check1" android:layout_width="wrap_content"
			android:textColor="#FFFFFF" android:layout_height="wrap_content"
			android:text="Satellite View" />
		<CheckBox android:id="@+id/check2" android:layout_width="wrap_content"
			android:textColor="#FFFFFF" android:layout_height="wrap_content"
			android:text="Street View" />
		<CheckBox android:id="@+id/check3" android:textColor="#FFFFFF"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Traffic" />
	</com.layout.TransparentPanel>
	<Button android:id="@+id/show_popup_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/left_switcher_collapsed_background"/>
</LinearLayout>