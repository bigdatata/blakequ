<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">
	<RelativeLayout 
    	android:paddingTop="5dip"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal">
         <ImageButton 
             android:id="@+id/imgbt"
             android:src="@drawable/pause_icon"
             android:background="@drawable/button_left_gray_background"
             android:layout_height="45dip"
             android:layout_width="45dip"/>
         <ProgressBar android:id="@+id/seekbar5"
            android:paddingTop="1dip"
            android:layout_toRightOf="@id/imgbt"
	        style="?android:attr/progressBarStyleHorizontal"  
	        android:progressDrawable="@drawable/seekbar_style4"   
	        android:layout_width="170dip"  
	        android:layout_height="48dip"  
	        android:paddingLeft="1dip"  
	        android:paddingRight="1dip"  
	        android:paddingBottom="4dip"/>
         <TextView
             android:layout_alignTop="@id/imgbt"
             android:layout_toRightOf="@id/seekbar5"
             android:background="@drawable/button_right_gray_background"
             android:layout_height="45dip"
             android:layout_width="55dip"/>
	</RelativeLayout>
</LinearLayout>